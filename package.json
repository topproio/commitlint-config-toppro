{
	"name": "commitlint-config-toppro",
	"version": "1.0.0",
	"description": "git commitlint config",
	"files": [
    "index.js"
  ],
	"main": "commitlint.config.js",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/z-ao/commitlint-config-toppro.git"
	},
	"bugs": {
		"url": "https://github.com/z-ao/commitlint-config-toppro/issues"
	},
	"author": "z-ao",
	"license": "MIT",
	"dependencies": {
		"@commitlint/cli": "^7.2.1",
		"@commitlint/config-conventional": "^7.1.2",
		"husky": "^1.2.1"
	},
	"husky": {
		"hooks": {
			"commitmsg": "commitlint -e $GIT_PARAMS",
			"pre-commit": "npm run lint"
		}
	},
	"private": false,
	"homepage": "https://github.com/z-ao/commitlint-config-toppro#readme",
	"directories": {
		"doc": "docs"
	},
	"devDependencies": {},
	"scripts": {
		"clean": "exit 0",
    "deps": "dep-check",
    "pkg": "pkg-check",
    "lint": "exit 0",
		"start": "exit 0",
		"test": "exit 0"
	},
	"config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  }
}
